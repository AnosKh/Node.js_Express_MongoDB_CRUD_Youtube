<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="OFF">
    <div class="form-group">
        <label for="fullName">Full Name</label>
        <input type="text" name="fullName" class="form-control" placeholder="Ful name">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="fullName" class="form-control" placeholder="Email">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Mobile">Mobile Number</label>
            <input type="number" name="mobile" class="form-control" placeholder="Mobile number">
        </div>
        <div class="form-group col-md-6">
            <label for="City">Full Name</label>
            <input type="text" name="city" class="form-control" placeholder="City">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
    </div>
</form>